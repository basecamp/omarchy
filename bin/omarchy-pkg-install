#!/bin/bash

# Show a fuzzy-finder TUI for picking new Arch, OPR and AUR packages to install.

preview_with_aur_warning() {
    local pkg="$1"
    local description=$(yay -Sii "$pkg")
    local repo=$(grep -Po '^Repository\s*:\s*\K.*' <<< "$description")
    if [[ $repo == "aur" ]]; then
        printf '\033[4;31mUnofficial Package Warning:\033[0m %s is from the AUR\n\n' "$pkg"
    fi
    echo "$description"
}

export -f preview_with_aur_warning

fzf_args=(
    --multi
    --ansi
    --preview 'preview_with_aur_warning {1}'
    --preview-label='alt-p: toggle description, alt-b/B: toggle PKGBUILD, alt-j/k: scroll, tab: multi-select'
    --preview-label-pos='bottom'
    --preview-window 'down:65%:wrap'
    --bind 'alt-p:toggle-preview'
    --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
    --bind 'alt-k:preview-up,alt-j:preview-down'
    --bind 'alt-b:change-preview:yay -Gp {1} | tail -n +5'
    --bind 'alt-B:change-preview:preview_with_aur_warning {1}'
    --color 'pointer:green,marker:green'
)

pkg_names=$(yay -Slq | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
    while IFS= read -r pkg; do
        [[ -z "$pkg" ]] && continue
        repo=$(yay -Sii "$pkg" | grep -Po '^Repository\s*:\s*\K.*')
        # use yay for AUR, pacman for official repos
        if [[ $repo == "aur" ]]; then
            yay -S --noconfirm "$pkg"
        else
            sudo pacman -S --noconfirm "$pkg"
        fi
    done <<< "$pkg_names"
    echo "Updating database..."
    sudo updatedb
    omarchy-show-done
fi
