#!/bin/bash

set -e

if (($# == 0)); then
  echo "Usage: omarchy-update-branch [master|dev]"
  exit 1
fi

# resolve current branch. if detached head (should be uncommon, but let's support it anyway),
# get the current hash instead
current_branch=$(git -C "$OMARCHY_PATH" symbolic-ref --quiet --short HEAD 2>/dev/null || git -C "$OMARCHY_PATH" rev-parse --short HEAD 2>/dev/null)
branch="$1"

# Snapshot before switching branch
omarchy-snapshot create "$(omarchy-version) - omarchy-update-branch: before switching from $current_branch to $branch" || [ $? -eq 127 ]

if ! git -C "$OMARCHY_PATH" diff --quiet || ! git -C "$OMARCHY_PATH" diff --cached --quiet; then
  stashed=true
  git -C "$OMARCHY_PATH" stash push -u -m "Autostash before switching to $branch"
else
  stashed=false
fi

# Switch branches
git -C "$OMARCHY_PATH" switch "$branch"

# Reapply stash if we made one
if [[ $stashed == true ]]; then
  if ! git -C "$OMARCHY_PATH" stash pop; then
    echo "⚠️ Conflicts when applying stash — stash kept"
  fi
fi

# Update the system from the new branch
omarchy-update-perform
