#!/bin/bash

set -e

# Sanitize app name to be safe for filenames and desktop entries
sanitize_app_name() {
  local name="$1"
  # Remove characters that are problematic in filenames and .desktop files
  echo "$name" | sed 's/[^a-zA-Z0-9 _.-]//g'
}

# Validate that a URL has a valid scheme
validate_url() {
  local url="$1"
  local label="$2"
  if [[ ! "$url" =~ ^https?:// ]]; then
    echo "Error: $label must start with https:// or http://" >&2
    return 1
  fi
}

# Download icon from a remote URL
download_icon() {
  local url="$1"
  local dest="$2"
  local dest_dir
  dest_dir=$(dirname "$dest")
  mkdir -p "$dest_dir"

  if ! curl -sL --fail -o "$dest" "$url"; then
    echo "Error: Failed to download icon from $url" >&2
    rm -f "$dest"
    return 1
  fi

  # Verify the downloaded file is a valid image (check for non-empty file)
  if [[ ! -s "$dest" ]]; then
    echo "Error: Downloaded icon is empty" >&2
    rm -f "$dest"
    return 1
  fi
}

# Create the .desktop file for the web app
create_desktop_entry() {
  local app_name="$1"
  local exec_command="$2"
  local icon_path="$3"
  local mime_types="$4"
  local desktop_file="$HOME/.local/share/applications/${app_name}.desktop"

  mkdir -p "$HOME/.local/share/applications"

  cat >"$desktop_file" <<EOF
[Desktop Entry]
Version=1.0
Name=$app_name
Comment=$app_name
Exec=$exec_command
Terminal=false
Type=Application
Icon=$icon_path
StartupNotify=true
EOF

  if [[ -n "$mime_types" ]]; then
    echo "MimeType=$mime_types" >>"$desktop_file"
  fi

  chmod +x "$desktop_file"
}

if [ "$#" -lt 3 ]; then
  echo -e "\e[32mLet's create a new web app you can start with the app launcher.\n\e[0m"
  APP_NAME=$(gum input --prompt "Name> " --placeholder "My favorite web app")
  APP_URL=$(gum input --prompt "URL> " --placeholder "https://example.com")
  ICON_REF=$(gum input --prompt "Icon URL> " --placeholder "See https://dashboardicons.com (must use PNG!)")
  CUSTOM_EXEC=""
  MIME_TYPES=""
  INTERACTIVE_MODE=true
else
  APP_NAME="$1"
  APP_URL="$2"
  ICON_REF="$3"
  CUSTOM_EXEC="$4" # Optional custom exec command
  MIME_TYPES="$5"  # Optional mime types
  INTERACTIVE_MODE=false
fi

# Ensure required fields are set
if [[ -z "$APP_NAME" || -z "$APP_URL" || -z "$ICON_REF" ]]; then
  echo "You must set app name, app URL, and icon URL!" >&2
  exit 1
fi

APP_NAME=$(sanitize_app_name "$APP_NAME")
validate_url "$APP_URL" "App URL"

# Resolve icon: download from URL or use local reference
ICON_DIR="$HOME/.local/share/applications/icons"
if [[ $ICON_REF =~ ^https?:// ]]; then
  ICON_PATH="$ICON_DIR/$APP_NAME.png"
  download_icon "$ICON_REF" "$ICON_PATH"
else
  ICON_PATH="$ICON_DIR/$ICON_REF"
  if [[ ! -f "$ICON_PATH" ]]; then
    echo "Error: Local icon not found at $ICON_PATH" >&2
    exit 1
  fi
fi

# Use custom exec if provided, otherwise default behavior
if [[ -n $CUSTOM_EXEC ]]; then
  EXEC_COMMAND="$CUSTOM_EXEC"
else
  EXEC_COMMAND="omarchy-launch-webapp $APP_URL"
fi

create_desktop_entry "$APP_NAME" "$EXEC_COMMAND" "$ICON_PATH" "$MIME_TYPES"

if [[ $INTERACTIVE_MODE == true ]]; then
  echo -e "You can now find $APP_NAME using the app launcher (SUPER + SPACE)\n"
fi
