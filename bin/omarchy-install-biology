#!/bin/bash

echo "Installing biology and bioinformatics support..."
echo ""
echo "This will install:"
echo "  - System packages (samtools, bcftools, bedtools, etc.)"
echo "  - Python packages (biopython, scanpy, etc.)"
echo "  - R packages (Bioconductor, tidyverse, etc.)"
echo ""

# Set OMARCHY_INSTALL environment variable
export OMARCHY_INSTALL="$HOME/.local/share/omarchy/install"

# Source the helpers
source $OMARCHY_INSTALL/helpers/all.sh

# Run the biology installation
run_logged $OMARCHY_INSTALL/packaging/bio-all.sh

echo ""
echo "Biology tools installed successfully!"
echo "See docs/BIOLOGY.md for usage information."
