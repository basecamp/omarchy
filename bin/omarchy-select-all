#!/usr/bin/env bash

# Universal select all: detects if the active window is a terminal and sends the
# appropriate shortcut. Kitty and Ghostty use Ctrl+Shift+A (mapped to select-all
# in each terminal's config), while all other apps (including Alacritty, which
# lacks a native select-all action) receive the standard Ctrl+A.

window_class=$(hyprctl activewindow -j | jq -r '.class')

if [[ "$window_class" =~ ^(kitty|com\.mitchellh\.ghostty)$ ]]; then
  hyprctl dispatch sendshortcut CTRL_SHIFT, A,
else
  hyprctl dispatch sendshortcut CTRL, A,
fi
