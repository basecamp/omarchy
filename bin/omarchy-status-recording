#!/bin/bash

# Screen recording status indicator
if pgrep -x wf-recorder >/dev/null 2>&1 || pgrep -x obs >/dev/null 2>&1 || pgrep -f "ffmpeg.*screen" >/dev/null 2>&1; then
  echo '{"text": "‚óè", "tooltip": "Screen recording active", "class": "status-recording"}'
else
  echo '{"text": "", "tooltip": "", "class": "hidden"}'
fi
