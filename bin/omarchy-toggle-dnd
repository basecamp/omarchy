#!/bin/bash

# Toggle Do Not Disturb mode using mako

# Check current mode
current_modes=$(makoctl mode 2>/dev/null)

if echo "$current_modes" | grep -q "do-not-disturb"; then
    # DND is currently on, turn it off
    makoctl mode -r do-not-disturb
    notify-send "󰂚  Do Not Disturb disabled" "Notifications will now be shown"
else
    # DND is currently off, turn it on
    makoctl mode -a do-not-disturb
    notify-send "󰂛  Do Not Disturb enabled" "Notifications are now muted"
fi