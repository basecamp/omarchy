#!/bin/bash

# Toggle Do Not Disturb mode using mako, then refresh Waybar indicator

# Ensure makoctl is available
if ! command -v makoctl >/dev/null 2>&1; then
  echo "makoctl not found" >&2
  exit 1
fi

# Toggle the mode
makoctl mode -t do-not-disturb

# Nudge waybar to refresh the DND module immediately (signal 9)
pkill -RTMIN+9 waybar
